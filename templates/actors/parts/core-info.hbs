<div class="core-info info-group">
    <div class="flexrow">
        <div class="info-item short">
            <label>{{localize "tftloop.age"}}</label>
            <select name="system.age">
                {{selectOptions kidAgeSet selected=selectedAge localize=false}}
            </select>
        </div>

        <div class="special-item flexrow">
            <div class="use-luck flexrow">{{localize "tftloop.luck"}}
                <div class="flexrow justify-start flex-none">
                    {{#times data.system.luck.value}}
                    <img src="systems/tftloop/img/box_checked.png" height="18px" width="18px">
                    {{/times}}
                    {{#times data.system.curLuck}}
                    <img src="systems/tftloop/img/box_not_checked.png" height="18px" width="18px">
                    {{/times}}
                </div>
            </div>

            <div class="reset-luck">{{localize "tftloop.reset"}}</div>
        </div>
    </div>

    <div class="info-item even flexrow">
        <label>{{localize "tftloop.drive"}}</label>
        <input name="system.drive" type="text" value="{{data.system.drive}}" placeholder="" />
    </div>

    <div class="info-item odd flexrow">
        <label>{{localize "tftloop.anchor"}}</label>
        <input name="system.anchor" type="text" value="{{data.system.anchor}}" placeholder="" />
    </div>

    <div class="info-item even flexrow">
        <label>{{localize "tftloop.problem"}}</label>
        <input name="system.problem" type="text" value="{{data.system.problem}}" placeholder="" />
    </div>

    <div class="info-item odd flexrow">
        <label>{{localize "tftloop.pride"}}</label>
        <input name="system.pride" type="text" value="{{data.system.pride}}" placeholder="" />
        <label class="imgCheck">
            {{#unless data.system.prideCheck}}
            <img class="toggle-boolean" data-toggle="prideCheck" src="systems/tftloop/img/box_not_checked.png"
                height="18px" width="18px">
            {{/unless}}

            {{#if data.system.prideCheck}}
            <img class="toggle-boolean" data-toggle="prideCheck" src="systems/tftloop/img/box_checked.png" height="18px"
                width="18px">
            {{/if}}
        </label>
    </div>

    <div class="info-item even flexrow">
        <label>{{localize "tftloop.description"}}</label>
        <input name="system.description" type="text" value="{{data.system.description}}" placeholder="" />
    </div>

    <div class="info-item odd flexrow">
        <label>{{localize "tftloop.favSong"}}</label>
        <input name="system.favoriteSong" type="text" value="{{data.system.favoriteSong}}" placeholder="" />
    </div>
</div>